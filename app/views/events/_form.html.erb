<%= form_with model: [ current_user, @event] do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% event.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :description %><br>
      <%= form.text_area :description, size: "70x5" %><br>
      <% event.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
        <%= form.label :location %><br>
        <%= form.text_area :location %><br>
        <% event.errors.full_messages_for(:location).each do |message| %>
          <div><%= message %></div>
        <% end %>
    </div>
        
    <div>
      <%= form.label :pay_status, "Is the Event free or paid?" %><br>
      <%= form.select :pay_status, ['free', 'paid'], selected: 'free' %>
    </div>

    <div>
      <%= form.label :from, "Start Date and Time" %><br>
      <%= form.datetime_local_field :from %><br>
      <% event.errors.full_messages_for(:from).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :to, "End Date and Time" %><br>
      <%= form.datetime_local_field :to %><br>
      <% event.errors.full_messages_for(:to).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
        <%= form.label :visible, "Would you like this event to show up on the main page?" %>
        <%= form.select :visible, ['everybody','private'], selected: 'private' %>
    </div>

    <div>
      <%= form.label :event_status, "Event Status" %><br>
      <%= form.select :event_status, ['ready','pending'], selected: 'pending' %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
  