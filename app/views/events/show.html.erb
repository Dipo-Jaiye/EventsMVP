<h1><%= @event.title %></h1>

<h2>Description</h2>
<p><%= @event.description %></p>

<h2>Location</h2>
<p><%= @event.location %></p>

<h2>Date and Time</h2>
<p>From <%= @event.from %> to <%= @event.to %></p>

<h2>Status</h2>
<p><%= @event.event_status %> <%= @event.pay_status %> Event</p>

<h2>Visibility</h2>
<p><%= @event.visible %></p>

<ul>
  <li><%= link_to "Edit", edit_user_event_path(current_user,@event) %></li>
  <li><%= link_to "Destroy", user_event_path(current_user,@event),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
  <li><%= link_to "Profile", user_path(current_user) %></li>
</ul>