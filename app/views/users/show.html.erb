<h1>Welcome <%= current_user.name %></h1>

<h2>Events</h2>
<p><%= render current_user.events %></p>

<ul>
  <li><%= link_to "New Event", new_user_event_path(current_user)%></li>
  <li><%= link_to "Manage Events", user_events_path(current_user)%></li>
  <li><%= link_to "Edit account settings", edit_user_path(current_user) %></li>
  <li><%= link_to "Delete account", user_path(current_user),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>